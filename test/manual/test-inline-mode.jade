doctype html
html
    head
        meta(charset="utf-8")
        title Style Test
        style.
            span {
                display:      inline;
                margin-right: 5px;
                padding:      4px 0;
                line-height:  1.8em;
            }
    body
        div#everything

        script(src="../../node_modules/requirejs/require.js")
        script(src="../unit/config.js")
        script.
            require(['cjs!src/shell-color'], function (ShellColor) {
                var str = [
                    'default color',
                    '\x1b[30mblack color',
                    '\x1b[31mred color',
                    '\x1b[32mgreen color',
                    '\x1b[33myellow color',
                    '\x1b[34mblue color',
                    '\x1b[35mmagenta color',
                    '\x1b[36mcyan color',
                    '\x1b[37mwhite color',
                    '\x1b[m',
                    '\x1b[40mblack background',
                    '\x1b[41mred background',
                    '\x1b[42mgreen background',
                    '\x1b[43myellow background',
                    '\x1b[44mblue background',
                    '\x1b[45mmagenta background',
                    '\x1b[46mcyan background',
                    '\x1b[47m white background',
                    '\x1b[0m',
                    '\x1b[1mbold\x1b[m',
                    '\x1b[3mitalic\x1b[m',
                    '\x1b[4munderline\x1b[m',
                    '\x1b[9mdeletion\x1b[m',
                    '\x1b[53moverline\x1b[m'
                ]

                var pre = document.getElementById('everything')
                ShellColor.toInlineTags(str.join(''), {
                    colorMap              : {
                        white: '#dddddd',
                        black: '#222222'
                    },
                    defaultBackgroundColor: 'white',
                    defaultForegroundColor: 'black'
                }).forEach(function (tag) {
                    pre.appendChild(tag)
                })
            })

